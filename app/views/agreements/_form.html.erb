<%= form_for(@agreement) do |f| %>
  <% if @agreement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@agreement.errors.count, "error") %> prohibited this 
        agreement from being saved:</h2>

      <ul>
      <% @agreement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :employee %><br />
    <%= f.text_field :employee %>
  </div>


  <h3>Contact Information:</h3>
  <table>
  <tr>
    <td><div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
    </div></td>
    <td><div class="field">
    <%= f.label "Telephone" %><br />
    <%= f.text_field :phone %>
  </div></td>
  </tr>
  <tr>
    <td><div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
    </div></td>
    <td><div class="field">
    <%= f.label "Mailbox" %><br />
    <%= f.text_field :box %>
  </div></td>
  </tr>
  </table>
  
  <h3>Performance Information</h3>

  <div class="field">
    <%= f.label "Title of Performance" %><br />
    <%= f.text_field :title %>
  </div>
  <table>
  <tr>
    <td><div class="field">
    <%= f.label "Performance Start Date" %><br />
    <%= f.date_select :perfstart %>
    </div></td>
    <td><div class="field">
    <%= f.label "Performance End Date" %><br />
    <%= f.date_select :perfend %>
    </div></td>
  </tr>
  <tr>
    <td><div class="field">
    <%= f.label "Due Date" %><br />
    <%= f.date_select :duedate, :default => 2.weeks.from_now %>
    </div></td>
    <td><div class="field">
    <%= f.label "Who Is Financing (Theater, Dance, or Other)?" %><br />
    <%= f.text_field :financer %>
    </div></td>
  </tr>
  </table>

  <h3>Items Borrowed</h3>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
